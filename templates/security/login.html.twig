{% extends 'base.html.twig' %}

{% block body %}
<div class="container my-3">
    {% for msg in app.flashes('registration_verified') %}
        <span class="text-secondary h4">{{msg}}</span>
    {% endfor %}
    <div class="row">
        <div class="col-md">
        <h2 class="text-primary">Se connecter</h2>
            <form action="{{ path('security_login')}}" method="post">
                <div class="form-group">
                    <input type="text" name="_username" placeholder="Email" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="password" name="_password" class="form-control" required>
                </div>
                <button class="btn btn-success" type="submit">Se connecter</button>
            </form>
        </div>
        <div class="col-md">
            <h2 class="text-primary">Pas encore de compte ?</h2>
            <a href="{{ path('security_registration') }}" class="btn btn-secondary">S'inscrire</a>
        </div>
    </div>
</div>

{% endblock %}
