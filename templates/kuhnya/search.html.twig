{% form_theme search_form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div class="col-2">
        <form class="form-inline my-2 my-lg-0" method="get" action="{{ path('kuhnya_showAll')}}">
            {{ form_start(search_form)}}

                {{ form_row(search_form.name) }}
                {{ form_row(search_form.level) }}
                {{ form_row(search_form.categories) }}

                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Rechercher</button>
            {{ form_end(search_form) }}
        </form>
    </div>
{% endblock %}

    