{% extends 'base.html.twig' %}

{% block body %}
	<section class="recettes">
		<h1 class="text-center text-primary">
			{% if author is defined %}
				Les Recettes de {{ author.username }}
			{% else %}	
				Nos Recettes
			{% endif %}
		</h1>
		<div class="row">
			<div class="col-md-2">
					{% include 'kuhnya/search.html.twig' %}
			</div>
			<div class="col-10 flex row justify-items mx-auto">
				{% for recipe in recipes %}
					{% include 'kuhnya/card.html.twig' %}
				{% endfor %}
			</div>
		</div>
		<div class="pagination justify-content-center">
        	{{ knp_pagination_render(recipes) }}
    	</div>
	</section>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('assets/js/setRating.js') }}"></script>
{% endblock %}
	
