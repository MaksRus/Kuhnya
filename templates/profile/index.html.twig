        <a href="{{ path('kuhnya_showByAuthor', {username : user.username}) }}">
            <img src="{{ asset(user.getAvatarPath()) }}" alt="{{user.username }}" class="user_avatar col-3"/>
        </a>
        {% if app.user == user %}
            {{ form_start(form) }}
                {{ form_row(form.avatar) }}
